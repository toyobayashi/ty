{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    {{jsx ? '"jsx": "' + jsx + '",' : ''}}
    {{jsx === 'preserve' ? '"jsxFactory": "h",' : ''}}
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "module": "esnext",
    "target": "{{target || 'es5'}}"
  },
  "include": [
    "{{include || './src/**/*'}}"
  ]
}
